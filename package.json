{
  "name": "codeecommerce",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:foundry": "forge test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:hardhat": "hardhat run scripts/deploy.js --network hardhat",
    "setup:local": "hardhat run scripts/setup.js --network localhost",
    "setup:hardhat": "hardhat run scripts/setup.js --network hardhat",
    "node": "hardhat node",
    "clean": "hardhat clean",
    "coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:fix": "solhint 'contracts/**/*.sol' --fix",
    "size": "hardhat size-contracts",
    "verify": "hardhat verify",
    "gas-report": "REPORT_GAS=true hardhat test"
  },
  "keywords": [
    "solidity",
    "ethereum",
    "ecommerce",
    "hardhat",
    "foundry",
    "defi",
    "erc20",
    "smart-contracts"
  ],
  "author": "E-commerce Platform Team",
  "license": "MIT",
  "description": "A comprehensive Solidity e-commerce platform with Hardhat and Foundry integration",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@openzeppelin/contracts": "^5.4.0",
    "hardhat": "^2.26.3"
  },
  "dependencies": {
    "dotenv": "^16.0.0"
  }
}
